@using CvMvc.Models.EntityFramework
@model List<Skill>

@{
    int i = 1;
}

<div class="section" id="skill">
    <div class="container">
        <div class="h4 text-center mb-4 title">Yeteneklerim</div>
        <div class="card" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
            <div class="card-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        i++;
                        if (i % 2 == 0)
                        {
                            <div class="col-md-6">
                                <div class="progress-container progress-primary">
                                    <span class="progress-badge">@item.Name</span>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-primary" data-aos="progress-full" data-aos-offset="10" data-aos-duration="2000" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @item.Point%;"></div><span class="progress-value">@item.Point%</span>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6">
                                <div class="progress-container progress-primary">
                                    <span class="progress-badge">@item.Name</span>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-primary" data-aos="progress-full" data-aos-offset="10" data-aos-duration="2000" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @item.Point%;"></div><span class="progress-value">@item.Point%</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>


