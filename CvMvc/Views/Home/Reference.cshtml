@using CvMvc.Models.EntityFramework
@model List<References>

@{ 
    int y = Model.Count() - 1;
}
<div class="section" id="reference">
    <div class="container cc-reference">
        <div class="h4 mb-4 text-center title">Referanslarım</div>
        <div class="card" data-aos="zoom-in">
            <div class="carousel slide" id="cc-Indicators" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i <= y; i++)
                    {
                        if (i == 0)
                        {
                            <li class="active" data-target="#cc-Indicators" data-slide-to="0"></li>
                        }
                        else
                        {
                            <li data-target="#cc-Indicators" data-slide-to="@i"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @if (Model.Count() != 0)
                    {
                        foreach (var item in Model.Take(1))
                        {
                            ViewBag.key = item.Id;
                            <div class="carousel-item active">
                                <div class="row">
                                    <div class="col-lg-2 col-md-3 cc-reference-header">
                                        <img src="@item.Profile" alt="Image" />
                                        <div class="h5 pt-2">@item.FullName</div>
                                        <p class="category">@item.Profession</p>
                                    </div>
                                    <div class="col-lg-10 col-md-9">
                                        <p> @item.Explanation</p>
                                    </div>
                                </div>
                            </div>
                        }
                        foreach (var item in Model.Where(x => x.Id != ViewBag.key))
                        {
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-lg-2 col-md-3 cc-reference-header">
                                        <img src="@item.Profile" alt="Image" />
                                        <div class="h5 pt-2">@item.FullName</div>
                                        <p class="category">@item.Profession</p>
                                    </div>
                                    <div class="col-lg-10 col-md-9">
                                        <p> @item.Explanation</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <div class="row">
                                <div class="col-lg-2 col-md-3 cc-reference-header">
                                    <img src="~/Images/References/questionMark.jpg" alt="Image" />
                                    <div class="h5 pt-2">İsim Yok</div>
                                    <p class="category">Meslek Yok</p>
                                </div>
                                <div class="col-lg-10 col-md-9">
                                    <p> Referans bulunmamaktadır.</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

