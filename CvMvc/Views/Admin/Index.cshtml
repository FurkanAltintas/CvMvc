@using CvMvc.Models.EntityFramework
@model List<Skill>

@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-mask"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Beceri Sayısı</span>
                        <span class="info-box-number">@ViewBag.Skill</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-globe"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Web Proje Toplam</span>
                        <span class="info-box-number">@ViewBag.Web</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix hidden-md-up"></div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-desktop"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Desktop Proje Toplam</span>
                        <span class="info-box-number">@ViewBag.Desktop</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-warning elevation-1"><i style="color: #fff!important" class="fas fa-mountain"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Fotoğraf Sayısı</span>
                        <span class="info-box-number">@ViewBag.Photo</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">En Yüksek Yetenekler</h5>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                    <i class="fas fa-wrench"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" role="menu">
                                    <a href="#" class="dropdown-item">Action</a>
                                    <a href="#" class="dropdown-item">Another action</a>
                                    <a href="#" class="dropdown-item">Something else here</a>
                                    <a class="dropdown-divider"></a>
                                    <a href="#" class="dropdown-item">Separated link</a>
                                </div>
                            </div>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <p class="text-center">
                                    <strong>Yetenekler</strong>
                                </p>
                                @foreach (var item in Model)
                                {
                                    if (item.Point <= 25)
                                    {
                                        <div class="progress-group">
                                            @item.Name
                                            <span class="float-right"><b>@item.Point</b>/100</span>
                                            <div class="progress progress-sm">
                                                <div class="progress-bar bg-danger" style="width: @item.Point%"></div>
                                            </div>
                                        </div>
                                    }
                                    if (item.Point > 25 && item.Point < 50)
                                    {
                                        <div class="progress-group">
                                            @item.Name
                                            <span class="float-right"><b>@item.Point</b>/100</span>
                                            <div class="progress progress-sm">
                                                <div class="progress-bar bg-warning" style="width: @item.Point%"></div>
                                            </div>
                                        </div>
                                    }
                                    if (item.Point >= 50 && item.Point < 75)
                                    {
                                        <div class="progress-group">
                                            @item.Name
                                            <span class="float-right"><b>@item.Point</b>/100</span>
                                            <div class="progress progress-sm">
                                                <div class="progress-bar bg-primary" style="width: @item.Point%"></div>
                                            </div>
                                        </div>
                                    }
                                    if (item.Point >= 75 && item.Point <= 100)
                                    {
                                        <div class="progress-group">
                                            @item.Name
                                            <span class="float-right"><b>@item.Point</b>/100</span>
                                            <div class="progress progress-sm">
                                                <div class="progress-bar bg-success" style="width: @item.Point%"></div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- ./card-body -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-3 col-6">
                                <div class="description-block border-right">
                                    @*<span class="description-percentage text-success"><i class="fas fa-caret-up"></i> 17%</span>*@
                                    <h5 class="description-header">@ViewBag.MaxSkill</h5>
                                    <span class="description-text">En Yüksek Yetenek</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-3 col-6">
                                <div class="description-block border-right">
                                    @*<span class="description-percentage text-warning"><i class="fas fa-caret-left"></i> 0%</span>*@
                                    <h5 class="description-header">@ViewBag.School</h5>
                                    <span class="description-text">Okuduğu Okul</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-3 col-6">
                                <div class="description-block border-right">
                                    @*<span class="description-percentage text-success"><i class="fas fa-caret-up"></i> 20%</span>*@
                                    <h5 class="description-header">@ViewBag.Portfolio</h5>
                                    <span class="description-text">Son Yapılan Proje</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-3 col-6">
                                <div class="description-block">
                                    @*<span class="description-percentage text-danger"><i class="fas fa-caret-down"></i> 18%</span>*@
                                    <h5 class="description-header">@ViewBag.Note</h5>
                                    <span class="description-text">Son Yazılan Not</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Action("Comment", "Admin")
    </div>