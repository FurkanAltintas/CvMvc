@model CvMvc.Models.EntityFramework.Detail

@{
    ViewBag.Title = "WebSite";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("WebSite", "Admin", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Site Bilgileri</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body" style="display: block;">
            @Html.Label("Site Adı")
            @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
        </div>
        <div class="card-body" style="display: block;">
            @Html.Label("Site Banner")
            <img src="@Model.Image" style="width: 1605px; height: auto;" />
        </div>
        <div class="card-body" style="display: block;">
            @Html.TextBoxFor(x => x.Image, new { @type = "file" })
        </div>
    </div>

    <button type="submit" class="btn btn-dark">Güncelle</button>
    <br /><br />
}


