@using CvMvc.Models.EntityFramework
@model List<Education>

@{
    ViewBag.Title = "Eğitim Listem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (Model.Count() != 0)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        @Model.Count() Tane eğitim durumu bulunmaktadır.
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Eğitim Bilgilerim</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
                    <div class="row">
                        <div class="col-12 col-sm-4">
                            <div class="info-box bg-light">
                                <div class="info-box-content">
                                    <span class="info-box-text text-center text-muted">Okuduğu Okul Toplamı</span>
                                    <span class="info-box-number text-center text-muted mb-0">@Model.Count()</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="info-box bg-light">
                                <div class="info-box-content">
                                    <span class="info-box-text text-center text-muted">Okuduğu Üniversite Toplam</span>
                                    <span class="info-box-number text-center text-muted mb-0">@Model.Count()</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="info-box bg-light">
                                <div class="info-box-content">
                                    <span class="info-box-text text-center text-muted">Bu Sene Okuduğu Üniversite Toplam</span>
                                    <span class="info-box-number text-center text-muted mb-0">@Model.Count()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            @foreach (var item in Model)
                            {
                                <div class="post">
                                    <div class="user-block">
                                        <span class="username" style="margin-left: 0px;">
                                            <a href="#">@item.Name @item.Detail (@item.Type)</a>
                                            <a href="/Admin/EducationDelete/@item.Id" class="btn btn-danger" style="float: right;"><i class="fas fa-trash"></i></a>
                                            <a href="/Admin/EducationEdit/@item.Id" class="btn btn-primary" style="float: right; margin-right: 5px;"><i class="fas fa-eye"></i></a>
                                        </span>
                                        <span class="description" style="margin-left: 0px;">@item.History</span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @item.Explanation
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        Eğitim durumu bulunmamaktadır.
    </div>
}

<a href="@Url.Action("EducationAdd","Admin")" class="btn btn-success">Ekle</a>


